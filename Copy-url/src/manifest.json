{
  "manifest_version": 2,

  "name": "Copy URL",
  "short_name": "copy URL",
  "description": "This extension allows you to copy URL of the current tab to your clipboard.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/aks.png",
    "default_title": "Press the button to copy the URL to the clipboard",
    "default_popup": "popup.html"
  },  
  "icons": { 
    "16": "img/aks.png",
    "48": "img/aks.png",
    "128": "img/aks.png"
  },

  "permissions": [
    "activeTab"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+C"
      }
    }
  }
}
